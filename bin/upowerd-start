#!/bin/sh
set -eu

# install and prepare upower with dependencies
install-from-arch upower=1.90.2-1 libimobiledevice=1.3.0-9 libplist=2.3.0-2 openssl=3.1.2-1 libusbmuxd=2.0.2-3

# without this dbus patch, upowerd fails with error messages
/userdata/extra/patches/mark-dbus-python-as-installed

if ! pgrep -f /usr/lib/upowerd >/dev/null; then
  /usr/lib/upowerd 2>&1 | logger &
fi
